@model IEnumerable<MinistryPlanner.Models.ChurchListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Church List</h2>
<body style="background-color:aqua;">

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    @if (TempData.ContainsKey("SaveResult"))
    {
        <div class="alert alert-success fade in" role="alert">
            <!--@ViewBag.SaveResult-->
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
            @TempData["SaveResult"]
        </div>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChurchId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedUtc)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ChurchId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedUtc)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ChurchId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ChurchId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ChurchId })
                </td>
            </tr>
        }

    </table>
